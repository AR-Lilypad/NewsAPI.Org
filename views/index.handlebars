<!--Homepage-->
<div>
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Headlines from theWashington Post</h1>
        </div>
    </div>

    <div class="row">
        <div class="col s2"></div>
        <div class="col s8 left-align">
            {{#each article}}
            <div class="card-panel">
                <h4>{{this.headline}}</h4>
                <a href="/readArticle/{{this._id}}" class="waves-effect waves-light btn" id="btnSignUp">Read Article</a>
                <a href="{{link}}" class="pull-right" target="_blank">
                    <div class="imgBox">
                        <img src="{{imgUrl}}" alt="" class="storyImg" height="150">
                    </div>
                </a>
                {{#if link}}
                <a href="{{link}}" class="storyLink" target="_blank">
                    <h2 class="storyHeadline">{{headline}}</h2>
                </a>
                {{else}}
                <h3 class="storyHeadline">{{headline}}</h3>
                {{/if}}
                <h5 class="storyByline">{{byLine}}</h5>
                <h6 class="storySummary">{{blurb}}</h6>
                <button class="storyButton" id="saveArticle" data-id="{{_id}}">Save Article</button>
            </div>

            {{/each}}
        </div>